@model WeiXin.BO.GuanJianZiContract
@{
    ViewBag.Title = "关键字信息操作";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.BackUrl = Url.Action("GuanJianZiMain");
}
@section css
{
    <link href="@Url.Content("~/Styles/_Layout_NoFrame.css")" rel="stylesheet" type="text/css" />
}
@section script
{
    <script src="@Url.Content("~/Scripts/Shared/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Shared/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/_Layout_NoFrame_Edit.js")" type="text/javascript"></script> 
}
<div id="divMain">
    <div id="divRightPage">
        <!--列表标题部分-->
        <div class="tblTitle" onselectstart='return false;'>
            <div>@(Model.gjzId == 0 ? "新增关键字" : "修改关键字")</div>
        </div>
        <div class="divReminders">
            ★<label style="color: Red;">“关键字”</label>不能重复哦<br />
        </div>
        <div class="divReminders">
        </div>
        @using (Html.BeginForm())
        {
         @Html.HiddenFor(model => model.gjzId) 
            <table class="tblForm">
               
                 <tr>
                    <td class="tdTitle">
                        关键字类型：
                    </td>
                    <td>
                        @Html.DropDownList("typeId", (ViewData["gjzType"] as SelectList), new { style = "width:177px;" })<br />
                    </td>
                </tr>
                <tr>
                    <td class="tdTitle">
                        关键字所属企业：
                    </td>
                    <td>
                        @Html.DropDownList("eId", (ViewData["Emp"] as SelectList), new { style = "width:177px;" })<br />
                    </td>
                </tr>
                 <tr>
                    <td class="tdTitle">
                        关键字名称：
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.name, new { maxlength = 15, style = "width:170px;" })
                        @Html.ValidationMessageFor(model => model.name)
                    </td>
                </tr>
            
                <tr>
                    <td class="tdTitle">
                        关键字状态:
                    </td>
                    <td>
                        @Html.RadioButton("isDisplay", 1, Model.isDisplay == 1 ? true : false, new { id = "rdEnable" })
                        <label for="rdEnable">
                            启用</label>
                        @Html.RadioButton("isDisplay", 0, Model.isDisplay == 0 ? true : false, new { id = "rdDisable" })
                        <label for="rdDisable">
                            禁用</label>
                    </td>
                </tr>
                <tr>
                    <td class="tdTitle">
                        关键词说明 ：
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.remark, new { maxlength = 15,style = "width:170px;"  })
                          @Html.ValidationMessageFor(model => model.remark)
                    </td>
                </tr>
            </table>
            
            <div class="divFormCtrl">
                <!--页面按钮 如：提交、取消、下一步、关闭-->
                <input class="divBtn" type="submit" value="提 交" />
                <a class="divBtn pageLWeiXinding" href="@ViewBag.BackUrl">关 闭</a>
            </div>
        }
    </div>
</div>
